extends layout
block content
    if  logged
        p Welcome #{profile}
        p Here are your current tasks :
        ul
            each task in todos
                li= task.text

    else
        block login
            h1 Sign in

            form(method='POST' action='/')
                div.form-group
                    label(for='userId') User ID:
                    input#name.form-control(type='text', placeholder='User ID' name='userId')
                div.form-group
                    label(for='apiKey') API Key:
                    input#pw.form-control(type='password' name='apiKey')
                button.btn.btn-primary(type='submit') Sign in